#include<iostream>
#include<algorithm>
#include<string>
#include<functional>
#include<array>
using namespace std;






int main() {
	
	int arr[100][100] = { 0, };// 0으로 초기화 하고

	int n;
	int row;
	int col;
	cin >> n;

	while (n > 0) {
		cin >> row >> col;
		for (int i = row-1; i < row + 9; i++) {
			for (int j = col-1; j < col + 9; j++) {
				arr[i][j] = 1;
			}
		}
		n--;
	}
	
	int cnt = 0;
	for (int i = 0; i < 100; i++) {
		for (int j = 0; j < 100; j++) {
			if (arr[i][j] == 1) cnt++;
		}
	}
	cout << cnt;


	
	return 0;
}


