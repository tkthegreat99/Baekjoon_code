#include<iostream>
#include<algorithm>
#include<string>
#include<functional>
using namespace std;






int main() {
	
	//노트북 판매 대수에 상관없이 "매년" 임대로, 재산세, 보험료, 급여 -> A만원의 고정 비용
	// 한 대의 노트북 생산하는데 재료비 + 인건비 등 ->   B 만원의 가변 비용



	//노트북 가격이 C만원
	// 총 수입 >= 고정 비용 + 가변비용  이 되는 시점 -> 손익분기점

	int a, b, c;
	int res = 0;

	cin >> a >> b >> c;

	//    c * res >= a + ( b * res)
	// res(b-c) >= a
	// res >= a / (b - c) 

	if (c == b) {
		cout << -1;
		return 0;
	}
	res = (a / (c - b)) + 1;
	if (res <= 0) {
		cout << -1;
		return 0;
	}

	cout << res;

	
	return 0;
}


